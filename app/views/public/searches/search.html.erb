<div class="container">
  <% if @model == 'customer' %>
    <div class="row">
        <div class="col">
          <h3>会員検索結果 "<%= @content %>"</h3>
        </div>
    </div>
    <div class="row mb-3">
      <%= render 'public/customers/index', customers: @records %>
    </div>
  <% elsif @model == 'post' %>
    <div class="row">
        <div class="col">
          <h3>投稿検索 "<%= @content %>"</h3></h3>
        </div>
    </div>
    <div class="row mb-3">
       <%= render 'public/posts/index', posts: @records %>
    </div>
  <% end %>
</div>