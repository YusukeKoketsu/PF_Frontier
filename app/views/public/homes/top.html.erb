<div class="container">
  <div class="row">
    <div class="col">
      <h2>記事一覧</h2>
    </div>
  </div>
  <div class="row mb-3">
   <% @articles.each do |article| %>
    <div class="col-lg-4 col-md-6 col-sm-7 mb-2 form-inline justify-content-center">
      <div class="card mt-5 shadow-lg">
        <%= link_to article_path(article.id), class: "bd-placeholder-img card-img-top" do %>
        <%= image_tag article.get_image("350x350!") %>
        <% end %>
        <dl>
          <dt class="article-title">タイトル</dt>
          <dd class="d-inline-block text-truncate ml-2" style="max-width: 200px;"><%= article.title %></dd>
          <dt class="article-text">紹介文</dt>
          <dd class="d-inline-block text-truncate ml-2" style="max-width: 200px;"><%= article.introduction %></dd>
          <dt class="mt-3 mb-3">投稿日</dt>
          <dd class="text-muted mt-2 ml-2"><%= article.created_at.strftime("%Y年%m月%d日") %></dd>
        </dl>
      </div>
    </div>
   <% end %>
 </div>
</div>