<div class="container">
  <div class="row">
   <% @favorites.each do |favorite| %>
     <div class="col">
       <%= link_to post_path(favorite.post.id) do %>
       <%= image_tag favorite.post.get_image("400x400") %>
       <% end %>
     </div>
  </div>
  <div class="row">
    <div class="col">
     <%= favorite.post.title %>
     <%= render_with_hashtags(favorite.post.introduction) %>
     <%= favorite.post.category.name %>
    </div>

<% end %>
</div>
</div>