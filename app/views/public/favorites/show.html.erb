<div class="container text-center">
  <div class="row mb-3">
   <% if @favorites.exists? %>
      <% @favorites.each do |favorite| %>
        <div class="col-sm-6 col-md-6 col-lg-4 mt-5">
          <%= link_to post_path(favorite.post.id) do %>
          <%= image_tag favorite.post.get_image("300x300!") %>
           <% end %>
        </div>
      <% end %>
   </div>
   <% else %>
     <div class="col text-center text-break mt-5">
         <h1>お気に入りの投稿はありません</h1>
     </div>
    <% end %>
 <%= paginate @favorites %>
</div>