<div class="container text-center">
 <div class="row mb-3">
 <% @favorites.each do |favorite| %>
  <div class="col-sm-6 col-md-6 col-lg-4 mt-5">
    <%= link_to post_path(favorite.post.id) do %>
    <%= image_tag favorite.post.get_image("300x300!") %>
    <% end %>
  </div>
 <% end %>
 </div>
</div>