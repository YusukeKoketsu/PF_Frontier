<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規投稿</h2>
    </div>
  </div>

  <%= form_with model: @post, url: post_path, method: :patch do |f| %>
  <div class="form-row mt-4">
    <div class="col-3">
      <%= f.label :image, "画像" %>
    </div>
    <div class="col">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="form-row mt-4">
    <div class="col-3">
      <%= f.label :title, "タイトル" %>
    </div>
    <div class="col-7">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-row mt-4">
    <div class="col-3">
      <%= f.label :introduction, "紹介文" %>
    </div>
    <div class="col-7">
      <%= f.text_area :introduction, class: "form-control", rows: "8" %>
    </div>
  </div>
  <div class="form-row mt-4">
    <div class="col-3">
      <%= f.label :category_id, "カテゴリ" %>
    </div>
    <div class="col-7">
      <!--カテゴリーの名前全てを表示させる-->
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), prompt: "--選択してください--" %>
    </div>
  </div>
  <div class="form-row mt-4">
    <div class="col-3">
      <%= f.label :rate, "評価" %>
    </div>
    <div class="col-7" id="star">
      <%= f.hidden_field :rate, id: :review_star %>
      <%= render 'public/posts/rate', post: @post %>
    </div>
  </div>
  <div class="form-row mt-4">
    <div class="col-3"></div>
    <div class="col-4">
      <%= f.submit "投稿", class: "btn btn-success form-control" %>
    </div>
  </div>
  <% end %>
</div>