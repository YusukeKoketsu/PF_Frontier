<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h2>投稿詳細</h2>
        <%= link_to "編集する", edit_admin_post_path(@post.id), class: "btn btn-success" %>
        <%= link_to "削除する",admin_post_path(@post.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger ml-2" %>
        <%= link_to "戻る", admin_customer_post_list_path(@post.customer.id), class: "btn btn-secondary ml-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-lg-5">
    <%= image_tag @post.get_image("400x400!") %>
    </div>
    <div class="col-md-6 col-lg-5 text-break">
      <dl>
       <h5>
        <dt>タイトル</dt>
        <dd class="mt-2 ml-2"><%= @post.title %></dd>
        <dt>紹介文</dt>
        <dd class="mt-2 ml-2"><%= render_with_hashtags(@post.introduction) %></dd>
        <dt>カテゴリ</dt>
        <dd class="mt-2 ml-2"><%= @post.category.name %></dd>
        <dt>評価</dt>
        <dd class="mt-2 ml-2" id="star-rate<%= @post.id %>"><%= render 'public/posts/rate', post: @post %></dd>
        <dt><span>いいね数 : <%= @post.favorites.count %></span><span class="post_comment_counter"><%= render 'admin/post_comments/counter', post: @post %></span>
        </dt>
        <dt class="mt-3 mb-3">投稿日</dt>
        <dd class="text-muted mt-2 ml-2"><%= @post.created_at.strftime("%Y年%m月%d日") %></dd>
      </h5>
    </dl>
    </div>
    <div class="post_comment">
       <%= render 'admin/post_comments/index',  post: @post %>
  </div>
  </div>
</div>
