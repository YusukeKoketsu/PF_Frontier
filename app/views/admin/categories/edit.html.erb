<div class="container">
  <%= render 'layouts/errors', obj: @category %>
  <div class="row text-center">
    <div class="col">
      <h3>カテゴリー編集</h3>
    </div>
  </div>
  <div class="row mt-3">
      <div class="col d-flex justify-content-center">
       <%= form_with model: @category, url: admin_category_path, method: :patch do |f| %>
       <div class="input-group">
          <%= f.text_field :name, class: "form-control" %>
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
    </div>
</div>