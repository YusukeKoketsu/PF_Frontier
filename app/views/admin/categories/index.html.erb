<div class="container">
  <div class="row text-center">
    <div class="col">
      <h3>カテゴリー</h3>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
       <%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
       <%= render 'layouts/errors', obj: @category %>
       <div class="input-group">
          <%= f.text_field :name, class: "form-control" %>
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 col-md-8 col-sm-10">
    <table class="table table-hover mt-3 text-center table-active">
          <thead>
            <tr>
              <th style="width: 80%">カテゴリー名</th>
              <th style="width: 20%"></th>
            </tr>
          </thead>
        <tbody>

          <% @categories.each do |category| %>

          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-success btn-sm" %></td>
          </tr>

          <% end %>

        </tbody>
    </table>
    </div>
  </div>
</div>