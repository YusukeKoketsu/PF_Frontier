<h1>カテゴリー</h1>

<%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>

<%= f.text_field :name %>

<%= f.submit "登録" %>

<% end %>

<% @categories.each do |category| %>

<%= category.name %>

<%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-secondary btn-sm" %>

<%= link_to "削除", admin_category_path(category.id), method: :delete, class: "btn btn-secondary btn-sm" %>

<% end %>