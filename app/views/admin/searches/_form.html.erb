<li class="nav-item mr-4 form-inline" type="button" data-toggle="modal" data-target="#exampleModalLong">
  <i class="fa fa-search"></i>
  検索
</li>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">検索</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      <div class="modal-body">
         <%= f.label :content, "キーワード" %>
         <%= f.text_field :content, size: "50", placeholder: "キーワードを入力してください。" %>
        <hr>
         <%= f.radio_button :model, "customer", class: "custom-checkbox" %>
         <%= f.label :content, "会員検索", class: "mr-5"  %>
         <%= f.radio_button :model, "post" %>
         <%= f.label :content, "投稿検索", class: "mr-5" %>
         <%= f.radio_button :model, "article" %>
         <%= f.label :content, "記事検索" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= button_tag '<i class="fa fa-search"></i>'.html_safe, :type => "submit", :class =>"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>